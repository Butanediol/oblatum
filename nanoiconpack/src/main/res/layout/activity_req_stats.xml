<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/black"
        android:paddingTop="@dimen/half_unit_padding"
        android:paddingBottom="@dimen/half_unit_padding"
        android:paddingStart="@dimen/activity_horz_margin"
        android:paddingEnd="@dimen/activity_horz_margin">

        <View
            android:background="@drawable/dot_green"
            android:layout_width="@dimen/unit_padding"
            android:layout_height="@dimen/unit_padding" />

        <TextView
            android:text="@string/prompt_req_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/half_unit_padding" />

        <View
            android:background="@drawable/dot_red"
            android:layout_marginStart="@dimen/unit_padding"
            android:layout_width="@dimen/unit_padding"
            android:layout_height="@dimen/unit_padding" />

        <TextView
            android:text="@string/prompt_req_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/half_unit_padding" />

    </LinearLayout>

</LinearLayout>